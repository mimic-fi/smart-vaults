{
  "name": "@mimic-fi/v2-helpers",
  "version": "0.1.0-rc.2",
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "artifacts/contracts/**/*",
    "!artifacts/contracts/test/*",
    "contracts/**/*",
    "!contracts/test/*",
    "dist"
  ],
  "scripts": {
    "build": "yarn compile && rm -rf dist && tsc",
    "compile": "hardhat compile",
    "lint": "yarn lint:solidity && yarn lint:typescript",
    "lint:solidity": "solhint 'contracts/**/*.sol' --config ../../node_modules/solhint-config-mimic/index.js",
    "lint:typescript": "eslint . --ext .ts",
    "test": "hardhat test",
    "prepare": "yarn build"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "chai": "^4.2.0",
    "decimal.js": "^10.3.1",
    "ethers": "~5.6.0",
    "hardhat": "^2.12.4"
  },
  "devDependencies": {
    "eslint-config-mimic": "^0.0.2",
    "ethereum-waffle": "^3.4.4",
    "solhint-config-mimic": "^0.0.1",
    "ts-node": "^8.10.2",
    "typescript": "~4.3.4"
  },
  "eslintConfig": {
    "extends": "eslint-config-mimic",
    "ignorePatterns": ["dist"]
  }
}
